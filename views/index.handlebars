<!-- ./view/index.handlebars -->

<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Login Page<i class="fas fa-sign-in"></i></h5>
          <hr>

          <form method="POST" action="/">
            <div class="form-group form-row">
              <label for="length" class="col-md-3 col-form-label">
                Email
              </label>
              <div class="col-md-8">
                <input type="email" name="email" class="form-control" id="email" min="4" max="16"
                  value="{{options.email}}" placeholder="email">
                {{!-- <small class="text-muted form-text">email</small> --}}
              </div>
            </div>

            <div class="form-group form-row">
              <label for="exclude-characters" class="col-md-3 col-form-label">
                Password
              </label>
              <div class="col-md-8">
                <input type="password" name="password" class="form-control" id="password" value=""
                  placeholder="password">
                {{!-- <small class="text-muted form-text">password</small> --}}
              </div>
            </div>

            {{#if passwordWrong}}
            <div class=" alert alert-info" role="alert">
              <span class="mr-2"></span> <code>Your password is {{passwordWrong}}</code>
            </div>
            {{else if usernameWrong}}
            <div class=" alert alert-info" role="alert">
              <span class="mr-2"></span> <code>{{usernameWrong}}</code>
            </div>
            {{else if emailEmpty}}
            <div class=" alert alert-info" role="alert">
              <span class="mr-2"></span> Please enter your email<code></code>
            </div>
            {{/if}}
            <button class="btn btn-success" type="submit">Sign in</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>